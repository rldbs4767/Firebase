<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_message"
        android:gravity="center"
        android:layout_margin="25dp"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Like it!" />


    <Button
        android:id="@+id/pizzaButton"
        android:text="pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:layout_alignLeft="@+id/tv_message"
        android:layout_alignStart="@+id/tv_message"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="115dp" />

    <Button
        android:id="@+id/mealButton"
        android:text="meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pizzaButton"
        android:layout_alignBottom="@+id/pizzaButton"
        android:layout_toRightOf="@+id/pizzaButton"
        android:layout_toEndOf="@+id/pizzaButton"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />


    <TextView

        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/my_recycler_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>

